---
import Layout from "../layouts/Layout.astro";
import { Image } from 'astro:assets';
import hero from '../images/genion.png';
---

<Layout title="Beranda | Genion Team" description="Tim profesional yang berfokus pada inovasi, teknologi, dan kreativitas untuk membangun masa depan yang lebih baik">
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-gray-50 via-white to-indigo-50 dark:bg-gradient-to-br dark:from-gray-950 dark:via-gray-900 dark:to-slate-900 text-gray-800 dark:text-white overflow-hidden">
    <!-- Animated Background Elements -->
    <div class="absolute inset-0 overflow-hidden">
        <div class="absolute -top-40 -right-40 w-80 h-80 bg-gradient-to-br from-blue-200/40 to-indigo-300/30 dark:from-blue-300/15 dark:to-purple-500/15 rounded-full blur-3xl animate-float"></div>
        <div class="absolute -bottom-40 -left-40 w-96 h-96 bg-gradient-to-tr from-indigo-200/40 to-pink-300/30 dark:from-purple-300/15 dark:to-pink-500/15 rounded-full blur-3xl animate-float" style="animation-delay: 2s;"></div>
        <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-64 h-64 bg-gradient-to-r from-indigo-200/30 to-cyan-300/20 dark:from-indigo-300/8 dark:to-cyan-300/8 rounded-full blur-2xl animate-float" style="animation-delay: 4s;"></div>
    </div>
    
    <!-- Grid Pattern -->
    <div class="absolute inset-0 opacity-[0.03] dark:opacity-[0.02]">
        <div class="absolute inset-0" style="background-image: radial-gradient(circle at 1px 1px, currentColor 1px, transparent 0); background-size: 50px 50px;"></div>
    </div>
    
    <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 sm:py-24 lg:py-32">
        <div class="grid lg:grid-cols-2 gap-8 lg:gap-12 xl:gap-16 items-center">
            <!-- Left Content -->
            <div class="animate-on-scroll order-2 lg:order-1">
                <div class="inline-flex items-center space-x-2 bg-indigo-100 dark:bg-indigo-500/20 backdrop-blur-sm rounded-full px-3 sm:px-4 py-2 mb-6 sm:mb-8 border border-indigo-200 dark:border-indigo-400/30">
                    <div class="w-2 h-2 bg-green-500 dark:bg-green-400 rounded-full animate-pulse"></div>
                    <span class="text-xs sm:text-sm font-medium text-indigo-700 dark:text-indigo-200">Available for New Projects</span>
                </div>
                
                <h1 class="text-4xl sm:text-5xl lg:text-6xl xl:text-7xl font-bold font-poppins leading-tight mb-4 sm:mb-6 text-gray-900 dark:text-gray-100">
                    <span class="block">Inovasi</span>
                    <span class="block text-cyan-700 dark:text-green-400">Digital</span>
                    <span class="block text-3xl sm:text-4xl lg:text-5xl xl:text-6xl text-gray-700 dark:text-gray-300">untuk Masa Depan</span>
                </h1>
                
                <p class="text-lg sm:text-xl text-gray-600 dark:text-gray-300 mb-6 sm:mb-8 leading-relaxed">
                    Kami adalah tim profesional yang menghadirkan solusi teknologi terdepan, 
                    kreativitas tanpa batas, dan inovasi berkelanjutan untuk transformasi digital Anda.
                </p>
                
                <div class="flex flex-col sm:flex-row gap-3 sm:gap-4 mb-8 sm:mb-12">
                    <a href="/about" class="inline-flex items-center justify-center px-6 sm:px-8 py-3 sm:py-4 bg-cyan-700 dark:bg-green-500 text-white font-semibold rounded-xl shadow-lg hover:shadow-xl transform hover:-translate-y-1 transition-all duration-300 group">
                        <span class="text-sm sm:text-base">Pelajari Lebih Lanjut</span>
                        <svg class="ml-2 w-4 h-4 sm:w-5 sm:h-5 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                        </svg>
                    </a>
                    <a href="/contact" class="inline-flex items-center justify-center px-6 sm:px-8 py-3 sm:py-4 bg-white dark:bg-gray-800 text-indigo-700 dark:text-gray-100 font-semibold rounded-xl border border-indigo-200 dark:border-gray-600 shadow-sm hover:shadow-md transition-all duration-300 hover:bg-indigo-50 dark:hover:bg-gray-700 text-sm sm:text-base">
                        Hubungi Kami
                    </a>
                </div>
                
                <!-- Partner Logos -->
                <div class="grid grid-cols-3 gap-4 sm:gap-6 lg:gap-8">
                    <!-- Partner 1 -->
                    <div class="flex flex-col items-center group">
                        <div class="w-16 h-16 sm:w-20 sm:h-20 flex items-center justify-center rounded-xl sm:rounded-2xl bg-white dark:bg-gray-800 p-2 sm:p-3 shadow-md dark:shadow-xl transition duration-500 group-hover:scale-110 group-hover:shadow-lg dark:group-hover:shadow-2xl border border-gray-200 dark:border-gray-700">
                            <img src="/logo_nuris.png" alt="SMK Nurul Islam Jakarta" loading="lazy" class="object-contain max-h-full max-w-full" />
                        </div>
                        <p class="mt-2 sm:mt-3 text-xs sm:text-sm text-gray-600 dark:text-gray-400 group-hover:text-indigo-700 dark:group-hover:text-indigo-300 transition text-center leading-tight">
                            SMK Nurul Islam Jakarta
                        </p>
                    </div>

                    <!-- Partner 2 -->
                    <div class="flex flex-col items-center group">
                        <div class="w-16 h-16 sm:w-20 sm:h-20 flex items-center justify-center rounded-xl sm:rounded-2xl bg-white dark:bg-gray-800 p-2 sm:p-3 shadow-md dark:shadow-xl transition duration-500 group-hover:scale-110 group-hover:shadow-lg dark:group-hover:shadow-2xl border border-gray-200 dark:border-gray-700">
                            <img src="/logobkk.jpg" alt="Bursa Kerja Khusus" loading="lazy" class="object-contain max-h-full max-w-full" />
                        </div>
                        <p class="mt-2 sm:mt-3 text-xs sm:text-sm text-gray-600 dark:text-gray-400 group-hover:text-indigo-700 dark:group-hover:text-indigo-300 transition text-center leading-tight">
                            Bursa Kerja Khusus
                        </p>
                    </div>

                    <!-- Partner 3 -->
                    <div class="flex flex-col items-center group">
                        <div class="w-16 h-16 sm:w-20 sm:h-20 flex items-center justify-center rounded-xl sm:rounded-2xl bg-white dark:bg-gray-800 p-2 sm:p-3 shadow-md dark:shadow-xl transition duration-500 group-hover:scale-110 group-hover:shadow-lg dark:group-hover:shadow-2xl border border-gray-200 dark:border-gray-700">
                            <img src="/logo_murata.avif" alt="PT. Multi Raksa Tribrata" loading="lazy" class="object-contain max-h-full max-w-full rounded" />
                        </div>
                        <p class="mt-2 sm:mt-3 text-xs sm:text-sm text-gray-600 dark:text-gray-400 group-hover:text-indigo-700 dark:group-hover:text-indigo-300 transition text-center leading-tight">
                            PT. Multi Raksa Tribrata
                        </p>
                    </div>
                </div>
            </div>

            <!-- Right Content - Interactive Element -->
            <div class="relative animate-on-scroll order-1 lg:order-2" style="animation-delay: 0.2s;">
                <div class="relative group max-w-lg mx-auto lg:max-w-none">
                    <!-- Main Card -->
                    <div class="glass-effect rounded-2xl sm:rounded-3xl p-3 sm:p-4 shadow-2xl dark:shadow-4xl overflow-hidden transform transition duration-500 group-hover:shadow-3xl dark:group-hover:shadow-5xl animate-float">
                        <Image 
                            src={hero}
                            alt="Performance Dashboard"
                            class="w-full h-auto object-cover rounded-xl sm:rounded-2xl transition duration-700 group-hover:scale-105"
                        />

                        <!-- Overlay Glass -->
                        <div class="absolute inset-0 bg-gradient-to-tr from-white/5 dark:from-white/3 via-transparent to-white/10 dark:to-white/5 rounded-xl sm:rounded-2xl pointer-events-none"></div>
                    </div>

                    <!-- Floating Accent Elements -->
                    <div class="absolute -top-3 -right-3 sm:-top-4 sm:-right-4 w-16 h-16 sm:w-24 sm:h-24 bg-gradient-to-br from-blue-400/40 to-cyan-300/40 dark:from-blue-400/20 dark:to-cyan-300/20 rounded-lg sm:rounded-xl blur-xl animate-pulse"></div>
                    <div class="absolute -bottom-3 -left-3 sm:-bottom-4 sm:-left-4 w-12 h-12 sm:w-20 sm:h-20 bg-gradient-to-tr from-purple-400/40 to-pink-400/40 dark:from-purple-400/20 dark:to-pink-400/20 rounded-lg sm:rounded-xl blur-xl animate-pulse delay-1000"></div>
                </div>
            </div>
        </div>
    </div>
</section>


  <!-- Services Section -->
  <section class="py-20 bg-gray-100 dark:bg-gray-900 transition-colors duration-300">
    <div class="max-w-7xl mx-auto px-6">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-gray-900 dark:text-gray-100 mb-4">Layanan Kami</h2>
        <p class="text-xl text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">Kami menyediakan solusi digital lengkap untuk membantu bisnis Anda tumbuh dan berkembang di era digital</p>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Service 1 -->
        <div class="group bg-white dark:bg-gray-800 backdrop-blur-sm rounded-2xl p-6 border border-gray-200 dark:border-gray-700 hover:border-purple-500/50 dark:hover:border-purple-400/50 shadow-lg dark:shadow-xl transition-all duration-300 hover:-translate-y-2">
          <div class="w-14 h-14 gradient-bg rounded-xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300">
            <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 dark:text-gray-100 mb-3">Pengembangan Web</h3>
          <p class="text-gray-600 dark:text-gray-400 mb-4">Website responsif dan aplikasi web yang dirancang khusus untuk kebutuhan bisnis Anda</p>
          <a href="#" class="inline-flex items-center text-purple-600 dark:text-purple-400 group-hover:text-purple-700 dark:group-hover:text-purple-300 transition-colors duration-300 font-medium">
            Selengkapnya
            <svg class="ml-1 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
        </div>
        
        <!-- Service 2 -->
        <div class="group bg-white dark:bg-gray-800 backdrop-blur-sm rounded-2xl p-6 border border-gray-200 dark:border-gray-700 hover:border-blue-500/50 dark:hover:border-blue-400/50 shadow-lg dark:shadow-xl transition-all duration-300 hover:-translate-y-2">
          <div class="w-14 h-14 gradient-bg rounded-xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300">
            <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 dark:text-gray-100 mb-3">Aplikasi Mobile</h3>
          <p class="text-gray-600 dark:text-gray-400 mb-4">Aplikasi iOS dan Android yang intuitif dan powerful untuk meningkatkan engagement pengguna</p>
          <a href="#" class="inline-flex items-center text-purple-600 dark:text-purple-400 group-hover:text-purple-700 dark:group-hover:text-purple-300 transition-colors duration-300 font-medium">
            Selengkapnya
            <svg class="ml-1 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
        </div>
        
        <!-- Service 3 -->
        <div class="group bg-white dark:bg-gray-800 backdrop-blur-sm rounded-2xl p-6 border border-gray-200 dark:border-gray-700 hover:border-green-500/50 dark:hover:border-green-400/50 shadow-lg dark:shadow-xl transition-all duration-300 hover:-translate-y-2">
          <div class="w-14 h-14 gradient-bg rounded-xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300">
            <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 dark:text-gray-100 mb-3">Digital Marketing</h3>
          <p class="text-gray-600 dark:text-gray-400 mb-4">Strategi pemasaran digital yang efektif untuk meningkatkan visibilitas dan konversi bisnis Anda</p>
          <a href="#" class="inline-flex items-center text-purple-600 dark:text-purple-400 group-hover:text-purple-700 dark:group-hover:text-purple-300 transition-colors duration-300 font-medium">
            Selengkapnya
            <svg class="ml-1 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 relative overflow-hidden bg-gray-50 dark:bg-gray-950 transition-colors duration-300">
    <div class="absolute inset-0 bg-gradient-to-br from-transparent via-indigo-50/30 to-transparent dark:from-transparent dark:via-indigo-950/20 dark:to-transparent"></div>
    <div class="absolute top-0 left-0 right-0 flex justify-center">
      <div class="w-full max-w-4xl h-72 bg-indigo-500/10 dark:bg-indigo-400/5 rounded-full blur-3xl"></div>
    </div>
    
    <div class="relative z-10 max-w-6xl mx-auto px-6">
      <div class="text-center mb-12">
        <h2 class="text-4xl font-bold text-gray-900 dark:text-white mb-6">Top Project</h2>
        <p class="text-xl text-gray-600 dark:text-gray-300 mb-10 max-w-2xl mx-auto">Lihat beberapa karya terbaik yang telah kami selesaikan untuk berbagai klien</p>
      </div>

      <!-- Project Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        
        <!-- Project 1 -->
        <div class="group relative bg-white dark:bg-gray-800 rounded-2xl overflow-hidden shadow-xl dark:shadow-2xl hover:shadow-2xl dark:hover:shadow-3xl transform hover:-translate-y-2 transition-all duration-500 border border-gray-100 dark:border-gray-700">
          <div class="aspect-video bg-gradient-to-br from-blue-500 to-purple-600 relative overflow-hidden">
            <!-- Gambar Project - ganti src dengan path gambar Anda -->
            <img src="/Edufo-Aset.png" alt="Edufo CRM Project" class="w-full h-full object-cover" loading="lazy" />
            <div class="absolute inset-0 bg-black bg-opacity-20 group-hover:bg-opacity-40 transition-all duration-300"></div>
            <div class="absolute bottom-4 left-4 text-white">
              <div class="w-12 h-12 bg-white bg-opacity-20 backdrop-blur-sm rounded-lg flex items-center justify-center mb-2">
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2L2 7v10c0 5.55 3.84 9.739 9 11 5.16-1.261 9-5.45 9-11V7l-10-5z"/>
                </svg>
              </div>
            </div>
          </div>
          <div class="p-6">
            <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2">Edufo CRM</h3>
            <p class="text-gray-600 dark:text-gray-300 mb-4">Website Pembelian Aplikasi Whitelabel Payment and Study Education Information (Edufo) Yang Terintegrasi Langsung Ke Aplikasi Mobile.</p>
            <div class="flex flex-wrap gap-2 mb-4">
              <span class="flex items-center gap-2 px-3 py-1 bg-blue-100 dark:bg-blue-900/50 text-blue-800 dark:text-blue-200 text-sm rounded-full border border-blue-200 dark:border-blue-700">TailwindCSS
                <span class="iconify" data-icon="mdi:tailwind" data-width="24"></span>
              </span>
              <span class="flex items-center gap-2 px-3 py-1 bg-red-100 dark:bg-red-900/50 text-red-800 dark:text-red-200 text-sm rounded-full border border-red-200 dark:border-red-700">Laravel
                <span class="iconify" data-icon="mdi:laravel" data-width="24"></span>
              </span>
              <span class="flex items-center gap-2 px-3 py-1 bg-indigo-100 dark:bg-indigo-900/50 text-indigo-800 dark:text-indigo-200 text-sm rounded-full border border-indigo-200 dark:border-indigo-700">PHP
                <span class="iconify" data-icon="mdi:language-php" data-width="24"></span>
              </span>
              <span class="flex items-center gap-2 px-3 py-1 bg-cyan-100 dark:bg-cyan-900/50 text-cyan-800 dark:text-cyan-200 text-sm rounded-full border border-cyan-200 dark:border-cyan-700">Kubernetes
                <span class="iconify" data-icon="mdi:kubernetes" data-width="24"></span>
              </span>
              <span class="flex items-center gap-2 px-3 py-1 bg-sky-100 dark:bg-sky-900/50 text-sky-800 dark:text-sky-200 text-sm rounded-full border border-sky-200 dark:border-sky-700">Docker
                <span class="iconify" data-icon="mdi:docker" data-width="24"></span>
              </span>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-sm text-gray-500 dark:text-gray-400">2025</span>
              <button class="text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300 font-semibold group-hover:translate-x-1 transition-transform duration-300">
                Lihat Detail →
              </button>
            </div>
          </div>
        </div>

        <!-- Project 2 -->
        <div class="group relative bg-white dark:bg-gray-800 rounded-2xl overflow-hidden shadow-xl dark:shadow-2xl hover:shadow-2xl dark:hover:shadow-3xl transform hover:-translate-y-2 transition-all duration-500 border border-gray-100 dark:border-gray-700">
          <div class="aspect-video bg-gradient-to-br from-emerald-500 to-teal-600 relative overflow-hidden">
            <!-- Gambar Project - ganti src dengan path gambar Anda -->
            <img src="/beranda_kostapp.png" alt="KostApp Project" class="w-full h-full object-cover" loading="lazy" />
            <div class="absolute inset-0 bg-black bg-opacity-20 group-hover:bg-opacity-40 transition-all duration-300"></div>
            <div class="absolute bottom-4 left-4 text-white">
              <div class="w-12 h-12 bg-white bg-opacity-20 backdrop-blur-sm rounded-lg flex items-center justify-center mb-2">
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zM9 17H7v-7h2v7zm4 0h-2V7h2v10zm4 0h-2v-4h2v4z"/>
                </svg>
              </div>
            </div>
          </div>
          <div class="p-6">
            <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2">KostApp - Pemesanan Kost</h3>
            <p class="text-gray-600 dark:text-gray-300 mb-4">Dashboard real-time untuk monitoring dan analisis Kost Dan Aplikasi Mobile Pemesanan Kos</p>
            <div class="flex flex-wrap gap-2 mb-4">
              <span class="flex items-center gap-2 px-3 py-1 bg-blue-100 dark:bg-blue-900/50 text-blue-800 dark:text-blue-200 text-sm rounded-full border border-blue-200 dark:border-blue-700">TailwindCSS
                <span class="iconify" data-icon="mdi:tailwind" data-width="24"></span>
              </span>
              <span class="flex items-center gap-2 px-3 py-1 bg-red-100 dark:bg-red-900/50 text-red-800 dark:text-red-200 text-sm rounded-full border border-red-200 dark:border-red-700">Laravel
                <span class="iconify" data-icon="mdi:laravel" data-width="24"></span>
              </span>
              <span class="flex items-center gap-2 px-3 py-1 bg-indigo-100 dark:bg-indigo-900/50 text-indigo-800 dark:text-indigo-200 text-sm rounded-full border border-indigo-200 dark:border-indigo-700">PHP
                <span class="iconify" data-icon="mdi:language-php" data-width="24"></span>
              </span>
              <span class="flex items-center gap-2 px-3 py-1 bg-yellow-100 dark:bg-yellow-900/50 text-yellow-800 dark:text-yellow-200 text-sm rounded-full border border-yellow-200 dark:border-yellow-700">JavaScript
                <span class="iconify" data-icon="mdi:language-javascript" data-width="24"></span>
              </span>
              <span class="flex items-center gap-2 px-3 py-1 bg-orange-100 dark:bg-orange-900/50 text-orange-800 dark:text-orange-200 text-sm rounded-full border border-orange-200 dark:border-orange-700">Firebase
                <span class="iconify" data-icon="mdi:firebase" data-width="24"></span>
              </span>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-sm text-gray-500 dark:text-gray-400">2025</span>
              <button class="text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300 font-semibold group-hover:translate-x-1 transition-transform duration-300">
                Lihat Detail →
              </button>
            </div>
          </div>
        </div>

        <!-- Project 3 -->
        <div class="group relative bg-white dark:bg-gray-800 rounded-2xl overflow-hidden shadow-xl dark:shadow-2xl hover:shadow-2xl dark:hover:shadow-3xl transform hover:-translate-y-2 transition-all duration-500 border border-gray-100 dark:border-gray-700">
          <div class="aspect-video bg-gradient-to-br from-rose-500 to-pink-600 relative overflow-hidden">
            <!-- Gambar Project - ganti src dengan path gambar Anda -->
            <img src="/Ka.png" alt="Bendahara App Project" class="w-full h-full object-cover" loading="lazy" />
            <div class="absolute inset-0 bg-black bg-opacity-20 group-hover:bg-opacity-40 transition-all duration-300"></div>
            <div class="absolute bottom-4 left-4 text-white">
              <div class="w-12 h-12 bg-white bg-opacity-20 backdrop-blur-sm rounded-lg flex items-center justify-center mb-2">
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
                </svg>
              </div>
            </div>
          </div>
          <div class="p-6">
            <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2">Bendahara App</h3>
            <p class="text-gray-600 dark:text-gray-300 mb-4">Aplikasi & Web untuk manajemen Pemasukan dan Pengeluaran Secara Efektif</p>
            <div class="flex flex-wrap gap-2 mb-4">
              <span class="flex items-center gap-2 px-3 py-1 bg-yellow-100 dark:bg-yellow-900/50 text-yellow-800 dark:text-yellow-200 text-sm rounded-full border border-yellow-200 dark:border-yellow-700">JavaScript
                <span class="iconify" data-icon="mdi:language-javascript" data-width="24"></span>
              </span>
              <span class="flex items-center gap-2 px-3 py-1 bg-sky-100 dark:bg-sky-900/50 text-sky-800 dark:text-sky-200 text-sm rounded-full border border-sky-200 dark:border-sky-700">
