---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Beranda | Genion Team" description="Tim profesional yang berfokus pada inovasi, teknologi, dan kreativitas untuk membangun masa depan yang lebih baik">
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-gray-50 via-white to-indigo-50 dark:bg-gradient-to-br dark:from-gray-950 dark:to-slate-900 text-gray-800 dark:text-white overflow-hidden">
    <!-- Animated Background Elements -->
    <div class="absolute inset-0 overflow-hidden">
        <div class="absolute -top-40 -right-40 w-80 h-80 bg-gradient-to-br from-blue-200/40 to-indigo-300/30 dark:from-blue-300/15 dark:to-purple-500/15 rounded-full blur-3xl animate-float"></div>
        <div class="absolute -bottom-40 -left-40 w-96 h-96 bg-gradient-to-tr from-indigo-200/40 to-pink-300/30 dark:from-purple-300/15 dark:to-pink-500/15 rounded-full blur-3xl animate-float" style="animation-delay: 2s;"></div>
        <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-64 h-64 bg-gradient-to-r from-indigo-200/30 to-cyan-300/20 dark:from-indigo-300/8 dark:to-cyan-300/8 rounded-full blur-2xl animate-float" style="animation-delay: 4s;"></div>
    </div>
    
    <!-- Grid Pattern -->
    <div class="absolute inset-0 opacity-[0.03] dark:opacity-[0.02]">
        <div class="absolute inset-0" style="background-image: radial-gradient(circle at 1px 1px, currentColor 1px, transparent 0); background-size: 50px 50px;"></div>
    </div>
    
    <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 sm:py-24 lg:py-32">
        <div class="grid lg:grid-cols-2 gap-8 lg:gap-12 xl:gap-16 items-center">
            <!-- Left Content -->
            <div class="animate-on-scroll order-2 lg:order-1">
                <div class="inline-flex items-center space-x-2 bg-indigo-100 dark:bg-white/5 backdrop-blur-sm rounded-full px-3 sm:px-4 py-2 mb-6 sm:mb-8 border border-indigo-200 dark:border-white/10">
                    <div class="w-2 h-2 bg-green-500 dark:bg-green-300 rounded-full animate-pulse"></div>
                    <span class="text-xs sm:text-sm font-medium text-indigo-700 dark:text-gray-200">Available for New Projects</span>
                </div>
                
                <h1 class="text-4xl sm:text-5xl lg:text-6xl xl:text-7xl font-bold font-poppins leading-tight mb-4 sm:mb-6 text-gray-900 dark:text-gray-100">
                    <span class="block">Inovasi</span>
                    <span class="block gradient-text">Digital</span>
                    <span class="block text-3xl sm:text-4xl lg:text-5xl xl:text-6xl text-gray-700 dark:text-gray-300">untuk Masa Depan</span>
                </h1>
                
                <p class="text-lg sm:text-xl text-gray-600 dark:text-gray-400 mb-6 sm:mb-8 leading-relaxed">
                    Kami adalah tim profesional yang menghadirkan solusi teknologi terdepan, 
                    kreativitas tanpa batas, dan inovasi berkelanjutan untuk transformasi digital Anda.
                </p>
                
                <div class="flex flex-col sm:flex-row gap-3 sm:gap-4 mb-8 sm:mb-12">
                    <a href="/about" class="inline-flex items-center justify-center px-6 sm:px-8 py-3 sm:py-4 gradient-bg text-white font-semibold rounded-xl shadow-lg hover:shadow-xl transform hover:-translate-y-1 transition-all duration-300 group">
                        <span class="text-sm sm:text-base">Pelajari Lebih Lanjut</span>
                        <svg class="ml-2 w-4 h-4 sm:w-5 sm:h-5 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                        </svg>
                    </a>
                    <a href="/contact" class="inline-flex items-center justify-center px-6 sm:px-8 py-3 sm:py-4 bg-white dark:bg-white/5 text-indigo-700 dark:text-gray-200 font-semibold rounded-xl border border-indigo-200 dark:border-white/10 shadow-sm hover:shadow-md transition-all duration-300 hover:bg-indigo-50 dark:hover:bg-white/10 text-sm sm:text-base">
                        Hubungi Kami
                    </a>
                </div>
                
                <!-- Partner Logos -->
                <div class="grid grid-cols-3 gap-4 sm:gap-6 lg:gap-8">
                    <!-- Partner 1 -->
                    <div class="flex flex-col items-center group">
                        <div class="w-16 h-16 sm:w-20 sm:h-20 flex items-center justify-center rounded-xl sm:rounded-2xl bg-white dark:bg-white/5 p-2 sm:p-3 shadow-md dark:shadow-lg transition duration-500 group-hover:scale-110 group-hover:shadow-lg dark:group-hover:shadow-xl border border-gray-200 dark:border-white/10">
                            <img src="/logo_nuris.png" alt="SMK Nurul Islam Jakarta" class="object-contain max-h-full max-w-full" />
                        </div>
                        <p class="mt-2 sm:mt-3 text-xs sm:text-sm text-gray-600 dark:text-gray-400 group-hover:text-indigo-700 dark:group-hover:text-gray-200 transition text-center leading-tight">
                            SMK Nurul Islam Jakarta
                        </p>
                    </div>

                    <!-- Partner 2 -->
                    <div class="flex flex-col items-center group">
                        <div class="w-16 h-16 sm:w-20 sm:h-20 flex items-center justify-center rounded-xl sm:rounded-2xl bg-white dark:bg-white/5 p-2 sm:p-3 shadow-md dark:shadow-lg transition duration-500 group-hover:scale-110 group-hover:shadow-lg dark:group-hover:shadow-xl border border-gray-200 dark:border-white/10">
                            <img src="/logobkk.jpg" alt="Bursa Kerja Khusus" class="object-contain max-h-full max-w-full" />
                        </div>
                        <p class="mt-2 sm:mt-3 text-xs sm:text-sm text-gray-600 dark:text-gray-400 group-hover:text-indigo-700 dark:group-hover:text-gray-200 transition text-center leading-tight">
                            Bursa Kerja Khusus
                        </p>
                    </div>

                    <!-- Partner 3 -->
                    <div class="flex flex-col items-center group">
                        <div class="w-16 h-16 sm:w-20 sm:h-20 flex items-center justify-center rounded-xl sm:rounded-2xl bg-white dark:bg-white/5 p-2 sm:p-3 shadow-md dark:shadow-lg transition duration-500 group-hover:scale-110 group-hover:shadow-lg dark:group-hover:shadow-xl border border-gray-200 dark:border-white/10">
                            <img src="/logo_murata.avif" alt="PT. Multi Raksa Tribrata" class="object-contain max-h-full max-w-full rounded" />
                        </div>
                        <p class="mt-2 sm:mt-3 text-xs sm:text-sm text-gray-600 dark:text-gray-400 group-hover:text-indigo-700 dark:group-hover:text-gray-200 transition text-center leading-tight">
                            PT. Multi Raksa Tribrata
                        </p>
                    </div>
                </div>
            </div>

            <!-- Right Content - Interactive Element -->
            <div class="relative animate-on-scroll order-1 lg:order-2" style="animation-delay: 0.2s;">
                <div class="relative group max-w-lg mx-auto lg:max-w-none">
                    <!-- Main Card -->
                    <div class="glass-effect rounded-2xl sm:rounded-3xl p-3 sm:p-4 shadow-2xl dark:shadow-4xl overflow-hidden transform transition duration-500 group-hover:shadow-3xl dark:group-hover:shadow-5xl animate-float">
                        <img 
                            src="/genion.png" 
                            alt="Performance Dashboard"
                            class="w-full h-auto object-cover rounded-xl sm:rounded-2xl transition duration-700 group-hover:scale-105"
                        />

                        <!-- Overlay Glass -->
                        <div class="absolute inset-0 bg-gradient-to-tr from-white/5 dark:from-white/3 via-transparent to-white/10 dark:to-white/5 rounded-xl sm:rounded-2xl pointer-events-none"></div>
                    </div>

                    <!-- Floating Accent Elements -->
                    <div class="absolute -top-3 -right-3 sm:-top-4 sm:-right-4 w-16 h-16 sm:w-24 sm:h-24 bg-gradient-to-br from-blue-400/40 to-cyan-300/40 dark:from-blue-400/20 dark:to-cyan-300/20 rounded-lg sm:rounded-xl blur-xl animate-pulse"></div>
                    <div class="absolute -bottom-3 -left-3 sm:-bottom-4 sm:-left-4 w-12 h-12 sm:w-20 sm:h-20 bg-gradient-to-tr from-purple-400/40 to-pink-400/40 dark:from-purple-400/20 dark:to-pink-400/20 rounded-lg sm:rounded-xl blur-xl animate-pulse delay-1000"></div>
                </div>
            </div>
        </div>
    </div>
</section>


  <!-- Services Section -->
  <section class="py-20 bg-gray-900 dark:bg-gray-950 transition-colors duration-300">
    <div class="max-w-7xl mx-auto px-6">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-white dark:text-gray-100 mb-4">Layanan Kami</h2>
        <p class="text-xl text-gray-300 dark:text-gray-400 max-w-2xl mx-auto">Kami menyediakan solusi digital lengkap untuk membantu bisnis Anda tumbuh dan berkembang di era digital</p>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Service 1 -->
        <div class="group bg-gray-800/50 dark:bg-gray-800/30 backdrop-blur-sm rounded-2xl p-6 border border-gray-700 dark:border-gray-600 hover:border-purple-500/30 dark:hover:border-purple-400/30 transition-all duration-300 hover:-translate-y-2">
          <div class="w-14 h-14 gradient-bg rounded-xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300">
            <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-white dark:text-gray-100 mb-3">Pengembangan Web</h3>
          <p class="text-gray-400 dark:text-gray-500 mb-4">Website responsif dan aplikasi web yang dirancang khusus untuk kebutuhan bisnis Anda</p>
          <a href="#" class="inline-flex items-center text-purple-400 dark:text-purple-300 group-hover:text-purple-300 dark:group-hover:text-purple-200 transition-colors duration-300">
            Selengkapnya
            <svg class="ml-1 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
        </div>
        
        <!-- Service 2 -->
        <div class="group bg-gray-800/50 dark:bg-gray-800/30 backdrop-blur-sm rounded-2xl p-6 border border-gray-700 dark:border-gray-600 hover:border-blue-500/30 dark:hover:border-blue-400/30 transition-all duration-300 hover:-translate-y-2">
          <div class="w-14 h-14 gradient-bg rounded-xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300">
            <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-white dark:text-gray-100 mb-3">Aplikasi Mobile</h3>
          <p class="text-gray-400 dark:text-gray-500 mb-4">Aplikasi iOS dan Android yang intuitif dan powerful untuk meningkatkan engagement pengguna</p>
          <a href="#" class="inline-flex items-center text-purple-400 dark:text-purple-300 group-hover:text-purple-300 dark:group-hover:text-purple-200 transition-colors duration-300">
            Selengkapnya
            <svg class="ml-1 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
        </div>
        
        <!-- Service 3 -->
        <div class="group bg-gray-800/50 dark:bg-gray-800/30 backdrop-blur-sm rounded-2xl p-6 border border-gray-700 dark:border-gray-600 hover:border-green-500/30 dark:hover:border-green-400/30 transition-all duration-300 hover:-translate-y-2">
          <div class="w-14 h-14 gradient-bg rounded-xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300">
            <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-white dark:text-gray-100 mb-3">Digital Marketing</h3>
          <p class="text-gray-400 dark:text-gray-500 mb-4">Strategi pemasaran digital yang efektif untuk meningkatkan visibilitas dan konversi bisnis Anda</p>
          <a href="#" class="inline-flex items-center text-purple-400 dark:text-purple-300 group-hover:text-purple-300 dark:group-hover:text-purple-200 transition-colors duration-300">
            Selengkapnya
            <svg class="ml-1 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 relative overflow-hidden bg-gray-50 dark:bg-gray-900 transition-colors duration-300">
    <div class="absolute inset-0 bg-gradient-to-br from-purple-900/20 dark:from-purple-800/15 to-blue-900/20 dark:to-blue-800/15"></div>
    <div class="absolute top-0 left-0 right-0 flex justify-center">
      <div class="w-full max-w-4xl h-72 bg-indigo-500/10 dark:bg-indigo-400/8 rounded-full blur-3xl"></div>
    </div>
    
    <div class="relative z-10 max-w-4xl mx-auto px-6 text-center">
      <h2 class="text-4xl font-bold text-gray-900 dark:text-white mb-6">Siap Memulai Proyek Anda?</h2>
      <p class="text-xl text-gray-700 dark:text-gray-300 mb-10 max-w-2xl mx-auto">Hubungi kami sekarang untuk konsultasi gratis dan dapatkan solusi terbaik untuk kebutuhan digital bisnis Anda</p>
      <a href="/contact" class="inline-flex items-center justify-center px-8 py-4 gradient-bg text-white font-semibold rounded-xl shadow-xl hover:shadow-2xl transform hover:-translate-y-1 transition-all duration-300 group">
        Mulai Sekarang
        <svg class="ml-2 w-5 h-5 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
        </svg>
      </a>
    </div>
  </section>

  <style>
    .glass-effect {
      background: rgba(255, 255, 255, 0.8);
      backdrop-filter: blur(10px);
      border: 1px solid rgba(255, 255, 255, 0.3);
    }
    
    .dark .glass-effect {
      background: rgba(17, 24, 39, 0.6);
      backdrop-filter: blur(10px);
      border: 1px solid rgba(255, 255, 255, 0.05);
    }hero-bg {
      background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
    }
    
    .dark .hero-bg {
      background: linear-gradient(135deg, #030712 0%, #111827 100%);
    }
    
    .gradient-bg {
      background: linear-gradient(90deg, #6366f1 0%, #8b5cf6 100%);
    }
    
    .gradient-text {
      background: linear-gradient(90deg, #4f46e5, #c084fc);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }
    
    .glass-effect {
      background: rgba(30, 41, 59, 0.5);
      backdrop-filter: blur(10px);
      border: 1px solid rgba(255, 255, 255, 0.1);
    }
    
    .dark .glass-effect {
      background: rgba(17, 24, 39, 0.6);
      backdrop-filter: blur(10px);
      border: 1px solid rgba(255, 255, 255, 0.05);
    }
    
    .animate-float {
      animation: float 6s ease-in-out infinite;
    }
    
    .animate-on-scroll {
      opacity: 0;
      transform: translateY(20px);
      transition: opacity 0.6s ease-out, transform 0.6s ease-out;
    }
    
    .animate-on-scroll.visible {
      opacity: 1;
      transform: translateY(0);
    }
    
    @keyframes float {
      0%, 100% { transform: translateY(0); }
      50% { transform: translateY(-10px); }
    }
  </style>

  <script>
    // Animation on scroll
    document.addEventListener('DOMContentLoaded', function() {
      const animatedElements = document.querySelectorAll('.animate-on-scroll');
      
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.classList.add('visible');
          }
        });
      }, {
        threshold: 0.1
      });
      
      animatedElements.forEach(el => observer.observe(el));
    });
  </script>
</Layout>