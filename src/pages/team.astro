            <!-- Left: Image -->
            <div class="md:w-5/12 bg-gradient-to-br ${member.color} relative">
              ${member.image ? `
                <img src="${member.image}" alt="${member.name}" class="w-full h-full object-cover min-h-[400px] md:min-h-[600px]" onerror="this.style.display='none'; this.nextElementSibling.style.display='flex'"/>
                <div class="absolute inset-0 hidden items-center justify-center text-white text-9xl font-bold">
                  ${member.initials}
                </div>
              ` : `
                <div class="w-full h-full flex items-center justify-center text-white text-9xl font-bold min-h-[400px] md:min-h-[600px]">
                  ${member.initials}
                </div>
              `}
            </div>

            <!-- Right: Content -->
            <div class="md:w-7/12 p-8 md:p-12 flex flex-col justify-center">
              <!-- Name and Role -->
              <div class="mb-6">
                <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-3">${member.name}</h2>
                <p class="text-lg md:text-xl font-semibold text-blue-600">${member.role}</p>
              </div>

              <!-- Description -->
              <p class="text-gray-600 leading-relaxed mb-8 text-base">${member.description}</p>

              <!-- Skills -->
              <div class="flex flex-wrap gap-2 mb-8">
                ${member.skills.map(skill => `
                  <span class="px-4 py-2 bg-indigo-600 text-white text-sm font-medium rounded-full">
                    ${skill}
                  </span>
                `).join('')}
              </div>

              <!-- Contact Links -->
              <div class="flex space-x-3 pt-4 border-t border-gray-200">
                <a href="${member.linkedin}" target="_blank" class="w-12 h-12 bg-gray-100 hover:bg-blue-600 hover:text-white rounded-full flex items-center justify-center transition-all duration-300 group">
                  <svg class="w-5 h-5 text-gray-700 group-hover:text-white transition-colors" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                  </svg>
                </a>

                <a href="${member.twitter}" target="_blank" class="w-12 h-12 bg-gray-100 hover:bg-sky-500 hover:text-white rounded-full flex items-center justify-center transition-all duration-300 group">
                  <svg class="w-5 h-5 text-gray-700 group-hover:text-white transition-colors" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"/>
                  </svg>
                </a>

                <a href="mailto:${member.email}" class="w-12 h-12 bg-gray-100 hover:bg-purple-600 hover:text-white rounded-full flex items-center justify-center transition-all duration-300 group">
                  <svg class="w-5 h-5 text-gray-700 group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                  </svg>
                </a>
              </div>
            </div>
          </div>
        </div>
      `;
      
      modal.classList.add('active');
      document.body.style.overflow = 'hidden';
    }

    window.closeModal = function() {
      modal.classList.remove('active');
      document.body.style.overflow = '';
    }

    // Add click event to all member cards
    memberCards.forEach(card => {
      card.addEventListener('click', function(e) {
        // Prevent opening modal if clicking on social links
        if (e.target.closest('a')) return;
        
        const memberIndex = parseInt(this.getAttribute('data-member-index'));
        openModal(memberIndex);
      });
    });

    // Close modal when clicking outside
    modal.addEventListener('click', function(e) {
      if (e.target === modal) {
        window.closeModal();
      }
    });

    // Close modal with ESC key
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape' && modal.classList.contains('active')) {
        window.closeModal();
      }
    });
  });
</script>