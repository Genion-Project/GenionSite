---
import Layout from "../../layouts/Layout.astro";
import { allMembers } from "../../data/team.js";

export async function getStaticPaths() {
  return allMembers.map((member, index) => ({
    params: { id: `GENION-${String(index + 1).padStart(2, '0')}` },
    props: { member },
  }));
}

const { member } = Astro.props;
---

<Layout title={`${member.name} - Profile`} description={`Profile of ${member.name}, ${member.role} at Genion.`}>
  <section class="min-h-screen flex items-center justify-center relative overflow-hidden bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 px-4 sm:px-6 py-20">
    <!-- Background Elements -->
    <div class="absolute inset-0">
      <div class="absolute top-10 right-10 w-96 h-96 bg-indigo-500/20 rounded-full blur-3xl animate-pulse"></div>
      <div class="absolute bottom-10 left-10 w-96 h-96 bg-purple-500/20 rounded-full blur-3xl animate-pulse" style="animation-delay: 1s;"></div>
    </div>
    <div class="absolute inset-0 bg-grid-pattern opacity-5"></div>

    <div class="max-w-3xl w-full mx-auto relative z-10">
      <div class="bg-white/10 backdrop-blur-md border border-white/20 rounded-2xl overflow-hidden shadow-2xl flex flex-col md:flex-row">
        
        <!-- Left Side: Image -->
        <div class={`w-full md:w-5/12 bg-gradient-to-br ${member.color} relative min-h-[300px] md:min-h-full`}>
          {member.image ? (
            <img 
              src={member.image} 
              alt={member.name} 
              class={`absolute inset-0 w-full h-full object-cover ${member.name === "Stanly Andrian Pratama" ? "object-top" : ""}`}
              onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';"
            />
          ) : null}
          <div class={`absolute inset-0 flex items-center justify-center text-white text-6xl md:text-7xl font-bold ${member.image ? 'hidden' : 'flex'}`}>
            {member.initials}
          </div>
          
          <!-- Decorative circle -->
          <div class="absolute -bottom-10 -left-10 w-32 h-32 bg-white/20 rounded-full blur-2xl"></div>
        </div>

        <!-- Right Side: Content -->
        <div class="w-full md:w-7/12 p-6 md:p-8 text-white">
          <div class="mb-4">
            <span class="inline-block px-3 py-1 bg-white/20 hover:bg-white/30 transition-colors backdrop-blur-sm rounded-full text-xs font-semibold mb-3 tracking-wide border border-white/10">
              {member.role}
            </span>
            <h1 class="text-3xl md:text-4xl font-bold mb-1 leading-tight">{member.name}</h1>
            <p class="text-white/60 text-sm font-light tracking-widest uppercase">ID: {Astro.params.id}</p>
          </div>

          <p class="text-base text-white/80 leading-relaxed mb-6 border-l-4 border-indigo-500 pl-4 bg-white/5 py-2 pr-2 rounded-r-lg">
            {member.description}
          </p>

          <div class="mb-6">
            <h3 class="text-xs font-bold uppercase tracking-wider text-indigo-300 mb-3">Expertise & Skills</h3>
            <div class="flex flex-wrap gap-1.5">
              {member.skills.map((skill) => (
                <span class="px-3 py-1 bg-indigo-600/50 hover:bg-indigo-600 border border-indigo-400/30 text-white text-xs font-medium rounded-lg transition-all duration-300 hover:scale-105">
                  {skill}
                </span>
              ))}
            </div>
          </div>

          <div class="flex items-center gap-3 pt-6 border-t border-white/10">
             {member.linkedin && member.linkedin !== '#' && (
              <a href={member.linkedin} target="_blank" rel="noopener noreferrer" class="p-2 bg-white/10 hover:bg-blue-600 hover:text-white rounded-lg transition-all duration-300 group" aria-label="LinkedIn">
                <img src="https://upload.wikimedia.org/wikipedia/commons/8/81/LinkedIn_icon.svg" alt="LinkedIn" class="w-5 h-5 object-contain" />
              </a>
             )}
            

            {member.instagram && member.instagram !== '#' && (
              <a href={member.instagram} target="_blank" rel="noopener noreferrer" class="p-2 bg-white/10 hover:bg-pink-600 hover:text-white rounded-lg transition-all duration-300 group" aria-label="Instagram">
                 <img src="https://upload.wikimedia.org/wikipedia/commons/9/95/Instagram_logo_2022.svg" alt="Instagram" class="w-5 h-5 object-contain" />
              </a>
             )}

            {member.email && member.email !== '#' && (
              <a href={`mailto:${member.email}`} class="p-2 bg-white/10 hover:bg-emerald-500 hover:text-white rounded-lg transition-all duration-300 group" aria-label="Email">
                <img src="https://upload.wikimedia.org/wikipedia/commons/7/7e/Gmail_icon_%282020%29.svg" alt="Email" class="w-5 h-5 object-contain" />
              </a>
            )}
          </div>

          <div class="mt-8">
            <a href="/team" class="inline-flex items-center text-xs font-semibold text-white/70 hover:text-white transition-colors group">
              <svg class="w-3 h-3 mr-2 transform group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/></svg>
              Back to All Team Members
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  .bg-grid-pattern {
    background-image: 
      linear-gradient(to right, rgba(255, 255, 255, 0.05) 1px, transparent 1px),
      linear-gradient(to bottom, rgba(255, 255, 255, 0.05) 1px, transparent 1px);
    background-size: 40px 40px;
  }
</style>
